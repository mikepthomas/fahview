<document outputName="${project.name}"
          xmlns="http://maven.apache.org/DOCUMENT/1.0.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/DOCUMENT/1.0.1 http://maven.apache.org/xsd/document-1.0.1.xsd">
    <meta>
        <title>${project.name}</title>
        <author>${project.developers[0].name}</author>
        <language>en-GB</language>
    </meta>

    <toc name="Table of Contents" depth="1">
        <item name="Abstract" ref="abstract.apt"/>
        <item name="List of Figures" ref="figures.apt"/>
        <item name="Report" ref="report.apt"/>
        
        <item name="Introduction" ref="index.apt"/>
        <item name="Problems and Opportunities" ref="problem.apt"/>
        <item name="Solution" ref="solution.apt"/>
        <item name="Aim and Objectives" ref="objectives.apt"/>
        <item name="Development Method" ref="development.apt"/>
        <item name="Project Planning" ref="planning.apt"/>
        <item name="Research" ref="research.apt"/>
    </toc>

    <cover>
        <coverTitle>${project.name}</coverTitle>
        <coverSubTitle>${project.version}</coverSubTitle>
        <coverType>Project Documentation</coverType>
        <coverdate>${day}/${month}/${year}</coverdate>

        <projectName>${project.name}</projectName>

        <companyName>${project.developers[0].name}</companyName>
        <companyLogo>http://www.stanford.edu/group/pandegroup/title4.jpg</companyLogo>
    </cover>
</document>
